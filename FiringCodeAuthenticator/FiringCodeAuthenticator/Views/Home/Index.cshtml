<!DOCTYPE html>
<html lang="en">
<head>
    <title>ASP.NET Web API</title>
    <link href="../../Content/Site.css" rel="stylesheet" />
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript">
    </script>
    <script type="text/javascript">
        $(document).ready();
        function find() {
            var code = $('#code').val();
            $.getJSON("api/authenticatecode?code=" + code,
                function (data) {
                    var str = data;
                    $('#codeStatus').text(str);
                })
            .fail(
                function (jqXHR, textStatus, err) {
                    $('#codeStatus').text('Error: ' + err);
                });
        }
    </script>
</head>
<body id="body" >
    <div class="main-content">
        <div>
            <h1>Code Authentication Status</h1>
        </div>
        <div>
            <input type="text" id="code" size="5"/>
            <input type="button" value="Authenticate" onclick="find();" />
            <p id="codeStatus" />
        </div>
    </div>
</body>
</html>